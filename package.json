{
  "name": "myapp",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev:start": "nodemon",
    "server:start": "DEBUG=myapp:* npm run dev:start",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "build": "rimraf ./build && tsc",
    "prod:start": "npm run build && node build/index.js"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pug": "^3.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.9",
    "@types/http-errors": "^1.8.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "husky": "^5.0.6",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
